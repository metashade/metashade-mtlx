{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MaterialX Viewer Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/MaterialX/installed/bin/MaterialXView.exe",
            "args": [
                "--material", "${workspaceFolder}/builds/MaterialX/installed/libraries/bxdf/standard_surface.mtlx",
                "--mesh", "${workspaceFolder}/builds/MaterialX/installed/resources/Geometry/sphere.obj",
                "--envRad", "${workspaceFolder}/builds/MaterialX/installed/resources/Lights/san_giuseppe_bridge.hdr",
                "--library", "${workspaceFolder}/builds/MaterialX/installed/libraries"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/builds/MaterialX/installed/bin",
            "environment": [
                {
                    "name": "MATERIALX_SEARCH_PATH",
                    "value": "${workspaceFolder}/builds/MaterialX/installed/libraries"
                },
                {
                    "name": "PYTHONPATH",
                    "value": "${workspaceFolder}"
                }
            ],
            "console": "internalConsole"
        },
        {
            "name": "MaterialX Graph Editor Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/MaterialX/installed/bin/MaterialXGraphEditor.exe",
            "args": [
                "--library", "${workspaceFolder}/builds/MaterialX/installed/libraries"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/builds/MaterialX/installed/bin",
            "environment": [
                {
                    "name": "MATERIALX_SEARCH_PATH",
                    "value": "${workspaceFolder}/builds/MaterialX/installed/libraries"
                },
                {
                    "name": "PYTHONPATH",
                    "value": "${workspaceFolder}"
                }
            ],
            "console": "internalConsole"
        },
        {
            "name": "Generate MaterialX Metashade Library",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/metashade-mtlx/generate.py",
            "args": [
                "--out-dir", "${workspaceFolder}/lib"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
