{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure MaterialX",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S", "${workspaceFolder}/MaterialX",
				"-B", "${config:MaterialX.buildDirectory}",
				"-DCMAKE_INSTALL_PREFIX=${config:MaterialX.installPrefix}",
				"-DMATERIALX_BUILD_VIEWER=ON",
				"-DMATERIALX_BUILD_GRAPH_EDITOR=ON",
				"-DMATERIALX_BUILD_PYTHON=ON",
				"-DMATERIALX_BUILD_TESTS=ON",
				"-DMATERIALX_BUILD_METASHADE=OFF"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"isBackground": false,
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		},
		{
			"label": "Build MaterialX Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build", "${config:MaterialX.buildDirectory}",
				"--config", "Debug",
				"--parallel"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"isBackground": false,
			"dependsOn": "Configure MaterialX",
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		},
		{
			"label": "Install MaterialX Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--install",
				"${config:MaterialX.buildDirectory}",
				"--config",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"isBackground": false,
			"dependsOn": "Build MaterialX Debug",
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		},
		{
			"label": "Clean MaterialX",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"${config:MaterialX.buildDirectory}",
				"--target",
				"clean"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false,
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		}
	]
}